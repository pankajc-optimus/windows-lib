<UserControl x:Class="CustomMapLibrary.PopupWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
     d:DesignHeight="50" d:DesignWidth="280">

    <Grid x:Name="LayoutRoot" Background="{x:Null}">
        <Button Content="Details" Height="70" HorizontalAlignment="Left" Name="btnDetails" VerticalAlignment="Top" Width="300" Margin="-10,-10,0,0" Background="#FFC93939"></Button>
    </Grid>
</UserControl>
